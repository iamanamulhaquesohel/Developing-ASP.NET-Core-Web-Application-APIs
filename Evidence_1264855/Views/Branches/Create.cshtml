@model Branch
@{
    ViewData["Title"] = "Create";
}
<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <h3>Create Branch:</h3>
            <div id="placeholder"></div>
            <form method="post" asp-action="Create" asp-controller="Branches" id="FormAJ"
                  data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#placeholder" data-ajax-success="onSuccess">

                <div class="form-group row mb-2">
                    <label asp-for="BranchName" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="BranchName" class="form-control form-control-sm" placeholder="Enter Branch Name" />
                        <span asp-validation-for="BranchName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="BranchAddress" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <textarea asp-for="BranchAddress" class="form-control form-control-sm" placeholder="Enter Branch Address"></textarea>
                        @*<input type="text" asp-for="BranchAddress" class="form-control form-control-sm" placeholder="Enter Branch Address" />*@
                        <span asp-validation-for="BranchAddress" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="BranchEmail" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="email" asp-for="BranchEmail" class="form-control form-control-sm" placeholder="Enter Branch Email" required />
                        <span asp-validation-for="BranchEmail" class="text-danger" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-4 offset-2">
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Branches"><i class="fa fa-backward"></i>Back to Index</a>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script>
        function onSuccess() {
            $("#FormAJ").trigger('reset');
        }
    </script>
}



