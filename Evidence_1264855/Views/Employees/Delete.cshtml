@model Employee
@{
    ViewData["Title"] = "Delete";
}
<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <h3>Delete Employee:</h3>
            <form method="post" asp-action="Delete" asp-controller="Employees" asp-route-EmployeeId="@Model.EmployeeId">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="form-group row mb-2">
                    <label asp-for="EmployeeName" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.EmployeeName" class="form-control form-control-sm" placeholder="Enter Employee Name" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="EmployeePhone" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.EmployeePhone" class="form-control form-control-sm" placeholder="Enter Phone Number" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="EmployeeSalary" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.EmployeeSalary" class="form-control form-control-sm" placeholder="Enter Salary" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="EmployeeDepartment" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.EmployeeDepartment" class="form-control form-control-sm" placeholder="Enter Salary" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="EmployeeJoinDate" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.EmployeeJoinDate" class="form-control" placeholder="Select Join Date" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="EmployeeGender" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.EmployeeGender" class="form-control form-control-sm" placeholder="Enter Salary" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="Continued" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <div class="form-check ">
                            <input type="checkbox" asp-for="@Model.Continued" name="Yes" id="Yes" value="Yes" class="form-check-input" disabled />
                            <label asp-for="Continued" class="form-check-label"> Yes running!</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="BranchId" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.Branches.BranchName" class="form-control form-control-sm" placeholder="Enter Salary" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="EmployeePicture" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <img src="/Uploads/@Model.EmployeePicture" style="width:45px" class="img-thumbnail" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4 offset-2">
                        <button type="submit" class="btn btn-success">Confirm Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Employees"><i class="fa fa-backward"></i>Back to Index</a>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}




