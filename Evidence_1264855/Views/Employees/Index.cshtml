@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid mb-2">
    <div class="row mb-2">
        <div class="col">
            <div class="display-6">Employee Lists:</div>
            <div class="d-flex justify-content-end mb-1">
                <a asp-action="Create" asp-controller="Employees"><i class="fa fa-plus-square-o btn btn-outline-success "></i></a>
            </div>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th>Photo</th>
                        <th>Employee Name</th>
                        <th>Phone</th>
                        <th>Salary</th>
                        <th>Department</th>
                        <th>Join Date</th>
                        <th>Gender</th>
                        <th>Job Running</th>
                        <th>Branch Name</th>
                        <th>Br. Address</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var Employee in Model)
                    {
                        <tr class="text-center align-middle">
                            <td><img asp-append-version="true" src="~/Uploads/@Employee.EmployeePicture" style="width:45px" class="img-thumbnail" /></td>
                            <td>@Employee.EmployeeName</td>
                            <td>@Employee.EmployeePhone</td>
                            <td>@Employee.EmployeeSalary.ToString("0.00")</td>
                            <td>@(Employee.EmployeeDepartment)</td>
                            <td>@Employee.EmployeeJoinDate.ToString("yyyy-MM-dd")</td>
                            <td>@Employee.EmployeeGender</td>
                            <td>@(Employee.Continued ? "Yes": "No")</td>
                            <td>@Employee.Branches.BranchName</td>
                            <td>@Employee.Branches.BranchAddress</td>
                            <td class="text-center">
                                <a asp-action="Info" asp-controller="Employees" asp-route-Id="@Employee.EmployeeId"><i class="fa fa-info btn btn-outline-success"></i></a>
                                <a asp-action="Update" asp-controller="Employees" asp-route-Id="@Employee.EmployeeId"><i class="fa fa-pencil-square-o btn btn-outline-success"></i></a>
                                <a asp-action="Delete" asp-controller="Employees" asp-route-Id="@Employee.EmployeeId"><i class="fa fa-trash-o btn btn-outline-danger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}

